<!-- res/layout/list_item_truyen_home.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="350dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:backgroundTint="#B0CFDD"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivHinhAnh"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_1" />

        <TextView
            android:id="@+id/tvTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivHinhAnh"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Tên Truyện"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvTacGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTenTruyen"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Tác Giả"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
