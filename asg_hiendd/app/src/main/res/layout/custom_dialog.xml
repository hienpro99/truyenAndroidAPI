<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCB910"
    android:padding="20dp">
    <EditText
        android:id="@+id/edMaSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã sản phẩm"
        android:textColor="#251E1E"
        android:textColorHint="#808080"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>
     <EditText
     android:id="@+id/edTenSP"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
         android:hint="Tên sản phẩm"
      android:textColor="#251E1E"
      android:textColorHint="#808080"
      android:padding="8dp"
      android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/edGiaSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sản phẩm"
        android:textColor="#251E1E"
        android:textColorHint="#808080"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edLoaiSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loại sản phẩm"
        android:textColor="#251E1E"
        android:textColorHint="#808080"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="16dp">

<Button
    android:id="@+id/buttonUploadImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tải ảnh lên"
    android:backgroundTint="#FF4081"
    android:textColor="#FFFFFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
   android:layout_marginEnd="8dp"/>
<ImageView
    android:id="@+id/imageSP"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginStart="8dp"
    android:src="@drawable/img" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end">

   <Button
    android:id="@+id/btnSave"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Xác nhận"
    android:backgroundTint="#0BCA34"
    android:textColor="#FFFFFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginEnd="8dp"/>

    <Button
    android:id="@+id/buttonCancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancel"
    android:backgroundTint="#BC0808"
    android:textColor="#FFFFFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"/>

</LinearLayout>

    </LinearLayout>
